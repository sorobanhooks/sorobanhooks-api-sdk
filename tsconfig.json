{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,          // ✅ allow .js files
    "declaration": true,      // ✅ generate .d.ts
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*"]
}
